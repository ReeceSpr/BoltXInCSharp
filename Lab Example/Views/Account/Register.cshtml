@model Lab_Example.Models.RegisterViewModel

@{
	ViewBag.Title = "Register New User";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal">
					<hr />

					@Html.Partial("_CreateRegisterUserPartial", Model)

					<div class="form-group">

						<div class="col-md">
							<input type="submit" value="Create" class="btn btn-default" />
						</div>
					</div>
				</div>
			}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
